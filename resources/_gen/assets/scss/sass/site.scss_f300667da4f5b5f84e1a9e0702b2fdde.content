  figure figcaption {
    font-style: italic;
    font-size: .9rem;
    margin-left: 15px; }
    figure figcaption h4 {
      margin: 0;
      padding: 0; }
    figure figcaption p {
      margin-top: 0; }

ul li {
  padding-bottom: 5px; }

img {
  max-width: 100%;
  height: auto; }

ul.social {
  list-style: none;
  margin: 50px 0 0 0;
  padding: 0;
  text-align: center;
  transition: all 0.7s ease; }
  ul.social li {
    display: inline-block; }
    ul.social li:hover svg {
      fill: #688BC4; }
  ul.social svg {
    width: 24px;
    fill: white; }
  ul.social a {
    display: block; }
